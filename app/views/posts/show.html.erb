<% content_for :sidebar_content do %>
  <h4 class="sidebar-h4">Stats:</h4>
  <ul class="tag-list">
    <li>Id: <%= @post.id %></li>
    <li>Posted: <%= @post.created_at.strftime("%Y/%m/%d %I:%M %p") %></li>
    <li>by <%= link_to @post.user.username, @post.user %></li>
    <li>Size: <%= @dimensions[0] %>x<%= @dimensions[1] %></li>
  </ul>
<% end %>
<%= image_tag @post.picture_url %>
