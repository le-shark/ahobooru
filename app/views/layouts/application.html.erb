<!DOCTYPE html>
<html>
  <head>
    <title>Ahobooru</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if @no_layout %>
      <%= yield %>
    <% else %>
      <div class="pure-g">
        <div class="pure-u-1">
          <div class="layout-header">
            <h3>Ahobooru</h3>
          </div>
          <div class="menu">
            A menu will be here someday, but probably not today.
          </div>
        </div>
        <div class="pure-u-1 pure-u-sm-1-6 sidebar">
          <%= form_tag posts_path, method: :get do %>
            <%= text_field_tag :q, params[:q], placeholder: "Search", class: "sidebar-search-box" %>
            <%= submit_tag "Search", name: nil %>
          <% end %>
        </div>
        <div class="pure-u-1 pure-u-sm-5-6 main-content">
          <%= yield %>
        </div>
      </div>
    <% end %>
    <script>
      console.log(he.decode(`<%= params %>`));
    </script>
  </body>
</html>
